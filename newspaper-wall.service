[Unit]
Description=Newspaper Wall Django App
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/newspaper_wall
Environment="PATH=/var/www/newspaper_wall/.venv/bin"
ExecStart=/var/www/newspaper_wall/.venv/bin/gunicorn --config gunicorn.conf.py newspaper_wall.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
